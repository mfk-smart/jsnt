{
   "$jason":{
      "head":{
         "title":"Eliza",
         "actions":{
            "$foreground":{
               "trigger":"reload"
            },
            "$load":{
               "trigger":"reload"
            },
            "reload":{
               "type":"$network.request",
               "options":{
                  "url":"https://raw.githubusercontent.com/mfk-smart/jsnt/master/hellojsnt.json",
                  "method":"get"
               },
               "success":{
                  "type":"$render"
               }
            }
         },
      },
      "body":
        "sections":[
            {
                "items":[{
                    "type":"map",
                    "region":{
                        "coord":"40.7197614,-73.9909211",
                        "width":"100",
                        "height":"100"
                    },
                    "style":{
                        "width":"100%",
                        "height":"300"
                    }
                },{
                    "type":"button",
                    "text":"Get GPS",
                    "style":{
                        "size":"40",
                        "font":"HelveticaNeue-CondensedBold",
                        "color":"#000000"
                    },
                    "action":{
                        "type":"$get.geo",
                        "options":{
                            "distance":"1000"
                        },
                        "success":{
                            "type":"$util.alert",
                            "title":"Captured GPS Coordinates",
                            "description":"{{$jason.coord}}"
                        }
                    }
                }]
            }
        ]
   }
}
