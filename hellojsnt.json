{
    "$jason": {
        "head": {
            "title": "Right Here",
            "description": "Searching anything nearby, links to yelp, google streetview and foursquare",
            "actions": {
                "$load":{
                    "type":"$network.request",
                    "optons":{
                        "url":"https://raw.github.com/mfk-smart/jsnt/master/hellojsnt.json"
                    },
                    "success":{
                        "type":"$render"
                    }
                },
                "$show":{
                    "type":"$render"
                },
                "$foreground":{
                    "type":"$render"
                },
                "$pull":{
                    "type":"$reload"
                },
                "show_alert": {
                    "type": "$util.alert",
                    "options": {
                        "title": "Identity",
                        "description": "M. Fatih KILIÃ‡"
                    }
                },
                "get_coord": {
                    "type": "$geo.get",
                    "name": "gpos",
                    "success":{
                        "type": "$util.banner",
                        "options": {
                            "title": "Konum",
                            "description": "$get.gpos"
                        }
                    } 
                }
            }
        },
        "body": {
            "sections": [{
                "items": [{
                    "type":"label",
                    "text":"v0.1g",
                }, {
                    "type": "map",
                    "region": {
                        "coord": "40.7197614,-73.9909211",
                        "width": "100",
                        "height": "100"
                    },
                    "style": {
                        "width": "100%",
                        "height": "300"
                    }
                }, {
                    "type": "Button",
                    "text": "Get GPS",
                    "style": {
                        "size": "40",
                        "font": "HelveticaNeue-CondensedBold",
                        "color": "#000000"
                    },
                    "action": {
                        "trigger": "get_coord"
                    }
                }, {
                    "type": "button",
                    "text": "Get Name",
                    "style": {
                        "size": "40",
                        "font": "HelveticaNeue-CondensedBold",
                        "color": "#000000"
                    },
                    "action":{
                        "trigger": "show_alert"
                    }
                }]
            }]
        }
    }
}
